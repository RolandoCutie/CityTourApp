<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Common.SplashScreen">


    <ImageView
        android:id="@+id/background_imagen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/spash_screen" />

    <TextView
        android:id="@+id/power_by_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="32dp"
        android:text="@string/power_by"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/background_imagen"
        app:layout_constraintStart_toStartOf="@+id/background_imagen"
        app:layout_editor_absoluteX="110dp"
        app:layout_editor_absoluteY="110dp" />


</androidx.constraintlayout.widget.ConstraintLayout>






